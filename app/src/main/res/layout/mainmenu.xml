<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolour"
    tools:context=".MenuPrincipal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="95dp">

        <Button
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="15dp"
            android:onClick="onFamiliasButtonClick"
            android:visibility="invisible"
            android:radius="5dp"/>

        <ImageView
            android:id="@+id/imageViewFamilias"
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/imageview_border"
            android:cropToPadding="true"
            android:padding="5dp"
            android:radius="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tipodefamilia" />


        <TextView
            android:id="@+id/textViewFamilias"
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:background="#33000000"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Diccionario  de Familias"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:visibility="visible"
            android:radius="5dp"/>

        <Button
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="335dp"
            android:onClick="onFamiliaresButtonClick"
            android:radius="10dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/imageViewFamiliares"
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_below="@id/textViewFamilias"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/imageview_border"
            android:cropToPadding="true"
            android:padding="5dp"
            android:radius="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tiposdefamiliares" />

        <TextView
            android:id="@+id/textViewFamiliares"
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:background="#33000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="335dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Diccionario  de Familiares"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:radius="5dp"
            android:visibility="visible" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>