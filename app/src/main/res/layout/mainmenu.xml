<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="95dp">

        <Button
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="15dp"
            android:onClick="onFamiliasButtonClick"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewFamilias"
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:alpha="0.8"
            android:background="@drawable/imageview_border"
            android:cropToPadding="true"
            android:padding="5dp"
            android:radius="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tipodefamilia" />


        <TextView
            android:id="@+id/textViewFamilias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageViewFamilias"
            android:layout_alignTop="@id/imageViewFamilias"
            android:layout_alignEnd="@id/imageViewFamilias"
            android:layout_alignBottom="@id/imageViewFamilias"
            android:background="#33000000"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Tipos de familias"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:visibility="visible" />

        <Button
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="310dp"
            android:onClick="onFamiliaresButtonClick"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewFamiliares"
            android:layout_width="320dp"
            android:layout_height="210dp"
            android:layout_below="@id/textViewFamilias"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:alpha="0.8"
            android:background="@drawable/imageview_border"
            android:cropToPadding="true"
            android:padding="5dp"
            android:radius="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tiposdefamiliares" />

        <TextView
            android:id="@+id/textViewFamiliares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageViewFamiliares"
            android:layout_alignTop="@id/imageViewFamiliares"
            android:layout_alignEnd="@id/imageViewFamiliares"
            android:layout_alignBottom="@id/imageViewFamiliares"
            android:background="#33000000"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Tipos de Familiares"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:visibility="visible" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>